{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noEmit": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext"],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "test",
        "dest",
        "node_modules",
        "src/**/*.spec.ts"
    ]
}
